#######
# Gradle 2.4
#######

# do not use directly. Use //tools/base/build-system:gradle
filegroup(
    name = "gradle-distrib-2.4",
    srcs = ["gradle-2.4-bin.zip"],
    visibility = ["//visibility:public"],
)

#######
# gradle 3.4.1
#######

# do not use directly. Use //tools/base/build-system:gradle
filegroup(
    name = "gradle-distrib-3.4.1",
    srcs = ["gradle-3.4.1-bin.zip"],
    visibility = ["//tools/base/build-system:__pkg__"],
)

# gradle-api jar, as generated by gradle when using the gradleApi() magic dependency.
# do not use directly. Use
# //tools/base/build-system:gradle-api_neverlink
# //tools/base/build-system:gradle-api
filegroup(
    name = "gradle-api-3.4.1-jar",
    srcs = ["gradle-api-3.4.1.jar"],
    visibility = ["//tools/base/build-system:__pkg__"],
)

java_import(
    name = "gradle-api-3.4.1",
    jars = ["gradle-api-3.4.1.jar"],
    tags = ["managed"],
    visibility = ["//visibility:public"],
)

